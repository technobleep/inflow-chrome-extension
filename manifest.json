{
    "manifest_version": 3,
    "name": "Inflow",
    "version": "1.0",
    "description": "Modify width of Story Column",
    "permissions": ["activeTab"],
    "action": {
      "default_icon": {
        "16": "inflow.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }]
  }